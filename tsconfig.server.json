{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",          // ← was "server"
    "outDir": "dist",         // ← was "dist/server"
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "outDir": "dist",
    "rootDirs": ["server", "shared"]
  },
  "include": ["server/**/*", "shared/**/*"]
}
